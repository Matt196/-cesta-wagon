<div class="col-xs-12 col-sm-6" >
  <div class="producer-card">
    <%= link_to producer_path(@producer) do %>
      <div class="producer-card-img" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)),
        url('<%= producer_img_path(@producer) %>')">
        <ul class="producer-awards list-unstyled list-inline">
          <% @medals_sorted.each_with_index do |medal, index| %>
            <li><img class="award-lg <%= medal[1]%>" src="<%= image_path medal[0] %>" /></li>
          <% end %>
        </ul>
        <div class="producer-avatar">

        </div>
      </div>
      <div class="producer-card-body">
        <div class="producer-card-infos">
          <h4><%= @producer ? @producer.category : 'Category' %></h4>
          <p><%= @producer ? @producer.name : 'Nom du producteur' %></p>
        </div>
        <div class="producer-card-location">
          <%= icon('car') %>
        </div>
      </div>
    <% end %>
  </div>
</div>
