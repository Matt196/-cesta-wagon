<div class="container">
  <div class="row">
    <div class= "col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">
      <div class="cesta-form">
        <%= render "devise/shared/social_links" %>
        <div class="text-stripped">
          <hr>
          <p>Or sign-in with an email</p>
        </div>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.label :email, class: "sr-only" %>
            <%= f.input_field :email, required: true, autofocus: true, class: "form-control cesta-input", placeholder: "Email" %>
            <%= f.label :password, class: "sr-only" %>
            <%= f.input_field :password, required: true, class: "form-control cesta-input", placeholder: "Password" %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in" class: "btn btn-primary btn-main-login" %>
          </div>
          <%= render 'devise/shared/missing_password' %>
        <% end %>

        <div class="text-stripped">
          <hr>
          <p>Pas de compte ? </p>
        </div>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
