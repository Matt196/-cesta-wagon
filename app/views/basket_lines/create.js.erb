
<% if @basket.errors.messages.present? %>

  $(".alert").remove()
  $("[data-flash]").before("<div class='alert'>gg</div>")
  $("[data-flash='<%= @basket.product_id %>']").prev().remove()
  $("[data-flash='<%= @basket.product_id %>']").before("<%= j render 'shared/flash_alert', elem: @basket.errors.messages[:product_id][0] %>")


<% else %>

  $(".alert").remove()
  $("[data-flash]").before("<div class='alert'>gg</div>")
  $("[data-flash='<%= @basket.product_id %>']").prev().remove()
  $("[data-flash='<%= @basket.product_id %>']").before("<div class='alert alert-info fade in'><button class='close' data-dismiss='alert'>×</button>Votre Produit est ajouté</div>")
<% end %>
